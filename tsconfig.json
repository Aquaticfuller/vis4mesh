{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipLibCheck":true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "./node_modules"
  ]
}